                    <!-- 요청 변수 설정 (승인키) -->
                    
                    <!-- 요청 변수 설정 (키워드) -->
                    <div style="float:right;">
                        <a class="modal-action waves-effect waves-green btn-flat" onClick="getAddr();">검색</a>
                    </div>
                    <div style="overflow:hidden;">
                        <input type="text" name="keyword" value="" onkeydown="enterSearch();" />
                    </div>
                    

